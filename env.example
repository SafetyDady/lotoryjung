# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///lotoryjung.db
SQLALCHEMY_DATABASE_URI=sqlite:///lotoryjung.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Security Configuration
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Timezone Configuration
TIMEZONE=Asia/Bangkok
CUTOFF_TIME=15:30

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/receipts

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Settings
TESTING=False
DEBUG=True

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=generate-a-strong-secret-key-for-production
# DATABASE_URL=postgresql://user:password@localhost/lotoryjung_prod
# LOG_LEVEL=WARNING
# DEBUG=False

